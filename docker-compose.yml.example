services:
    angular-cli:
        container_name: newton-npm
        image: node:16-alpine
        working_dir: /home/node/app
        volumes:
            - .:/home/node/app
        environment:
            - NODE_ENV=development
        tty: true
        restart: always

    mysql:
        platform: linux/x86_64
        container_name: mysql-newton
        image: mysql:8.0
        ports:
            - 3306:3306
        volumes:
            - db-data:/var/lib/mysql
        environment:
            - MYSQL_DATABASE=newton
            - MYSQL_ROOT_PASSWORD=root
        restart: always

    nginx:
        container_name: nginx-newton
        image: nginx:alpine
        working_dir: /application
        volumes:
            - .:/application
            - ./dev/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
        ports:
            - 80:80
        depends_on:
            - mysql
        restart: always

    mailhog:
        platform: linux/x86_64
        image: mailhog/mailhog:latest
        container_name: newton-mailhog
        ports:
              - 8025:8025

    php-fpm:
        platform: linux/x86_64
        build:
            context: ./dev
            dockerfile: Dockerfile
        container_name: newton-php-fpm
        working_dir: /application
        volumes:
            - .:/application
            - ./dev/php/php-ini-overrides.ini:/etc/php/8.1/fpm/conf.d/99-overrides.ini
            - ./dev/php/php.ini:/opt/bitnami/php/lib/php.ini
volumes:
    db-data:
